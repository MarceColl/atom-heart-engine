CFLAGS += -Wall
CFLAGS += -O2

LDFLAGS += -lglfw
LDFLAGS += -lGL
LDFLAGS += -lglut
LDFLAGS += -ldl

: glfw_game.cpp |> g++ $(CFLAGS) %f -o glfw_game $(LDFLAGS) -I./src/ |> glfw_game
: foreach src/*.cpp |> g++ -c $(CFLAGS) -I./src/ %f -o %o |> build/%B.o
: build/*.o |> g++ %f -shared -o lib/libgamecode.so $(LDFLAGS) |> lib/libgamecode.so
